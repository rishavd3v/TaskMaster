  <section class="add-task-container">
      <div class="add-head">
        <h4>Create Task</h4>
      </div>
      <div class="add-input">
        <form action="" id="taskForm">
          <input type="text" placeholder="Title" id="title" name="title" required>
          <input type="text" placeholder="Description" id="desc" name="description">
          <input type="date" id="date" name="date">
          <button type="submit" id="addBtn">Add</button>
          <button id="clearBtn">Clear</button>
        </form>
      </div>

      <div class="add-priority">
        <div class="priority-btn-con">
          <button class="red" value="#ff6464"></button>
        </div>

        <div class="priority-btn-con">
          <button class="yellow" value="#ffd40f"></button>
        </div>

        <div class="priority-btn-con">
          <button class="blue" value="#009dff"></button>
        </div>

        <div class="priority-btn-con">
          <button class="green" value="#15ce00"></button>
        </div>

      </div>
  </section>

